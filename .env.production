# 生产环境配置

# 应用配置
NODE_ENV=production
PORT=3001

# 数据库配置 - 请根据实际RDS信息修改
POSTGRES_USER=huitong_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=huitong_material
POSTGRES_HOST=your-rds-host.rds.aliyuncs.com
POSTGRES_PORT=5432

# Prisma数据库连接URL
POSTGRES_PRISMA_URL=postgresql://huitong_user:your_secure_password_here@your-rds-host.rds.aliyuncs.com:5432/huitong_material?schema=public&sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://huitong_user:your_secure_password_here@your-rds-host.rds.aliyuncs.com:5432/huitong_material?schema=public&sslmode=require

# 文件上传配置
UPLOAD_DIR=/app/uploads

# 阿里云OSS配置（可选）
# ALIYUN_OSS_REGION=oss-cn-hangzhou
# ALIYUN_OSS_ACCESS_KEY_ID=your_access_key_id
# ALIYUN_OSS_ACCESS_KEY_SECRET=your_access_key_secret
# ALIYUN_OSS_BUCKET=your_bucket_name